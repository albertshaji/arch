# .config/ranger/rc.conf ranger

set preview_images_method w3m
set preview_images true
set use_preview_script true
map <F6> set use_preview_script!

map z shell zip -r %f %f
map uz shell unzip %f
map ur unrar e %f

map g/ cd /
map gh cd ~
map ga cd ~/aud
map gd cd ~/doc
map gD cd ~/dl
map gp cd ~/pic
map gc cd ~/code
map gv cd ~/vid
map gP cd ~/phone
map gm cd /run/media/
map gt cd ~/.local/share/Trash/files

map <DELETE> shell gio trash %s

map t shell echo %p >>~/tlist.txt
map T shell echo %p >~/tlist.txt
