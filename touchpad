# /usr/share/X11/xorg.conf.d/30-touchpad.conf xorg-server

Section "InputClass"
	    Identifier "touchpad"
	    Driver "libinput"
	    Option "NaturalScrolling" "true"
	    Option "ScrollMethod" "two-finger"
        Option "Tapping" "true"
        Option "TappingDrag" "true"
        Option "TappingDragLock" "true"
EndSection
